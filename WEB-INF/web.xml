<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ConnectionControllerServlet</servlet-name>
        <servlet-class>edu.uncc.nbad.ConnectionControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileControllerServlet</servlet-name>
        <servlet-class>edu.uncc.nbad.ProfileControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NavigationServlet</servlet-name>
        <servlet-class>edu.uncc.nbad.NavigationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FormControllerServlet</servlet-name>
        <servlet-class>edu.uncc.nbad.FormControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnectionControllerServlet</servlet-name>
        <url-pattern>/ConnectionControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileControllerServlet</servlet-name>
        <url-pattern>/ProfileControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NavigationServlet</servlet-name>
        <url-pattern>/NavigationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FormControllerServlet</servlet-name>
        <url-pattern>/FormControllerServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
